{
    # Desativa redirect automático HTTP→HTTPS
    auto_https disable_redirects

    # Plugin FrankenPHP (Swoole + Caddy interno)
    frankenphp
}

:80 {
    root * /app/public
    encode zstd br gzip

    # Agrupe php_server e file_server num bloco route
    route {
        # Intercepta e processa PHP
        php_server

        # Serve arquivos estáticos restantes
        file_server
    }
}
